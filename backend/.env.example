# ProLaunch Infrastructure Environment Variables
# Copy this file to .env and configure with your actual values

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
ENVIRONMENT=development  # Options: development, staging, production, test

# ========================================
# REDIS CONFIGURATION
# ========================================
# Basic Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Connection Pool Settings
REDIS_DECODE_RESPONSES=true
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_KEEPALIVE=true
REDIS_POOL_MAX_CONNECTIONS=50
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# SSL Configuration (for production)
REDIS_SSL=false
REDIS_SSL_CERTFILE=
REDIS_SSL_KEYFILE=
REDIS_SSL_CA_CERTS=

# Redis MCP Configuration
REDIS_MCP_ENABLED=true
REDIS_MCP_ENDPOINT=
REDIS_MCP_TOKEN=

# Cache TTL Settings (in seconds)
REDIS_DEFAULT_TTL=3600        # 1 hour
REDIS_SESSION_TTL=1800        # 30 minutes
REDIS_API_CACHE_TTL=900       # 15 minutes
REDIS_RATE_LIMIT_TTL=60       # 1 minute

# Cluster Configuration (optional)
REDIS_ENABLE_CLUSTER=false
REDIS_CLUSTER_NODES=
REDIS_READ_REPLICAS=false

# ========================================
# MINIO/S3 STORAGE CONFIGURATION
# ========================================
# Connection Settings
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_REGION=us-east-1
MINIO_BUCKET_NAME=prolaunch-documents

# Security Settings
MINIO_ENABLE_ENCRYPTION=true
MINIO_ENCRYPTION_KEY=
MINIO_ENABLE_VERSIONING=true
MINIO_ENABLE_LIFECYCLE=true

# Performance Settings
MINIO_MULTIPART_THRESHOLD=8388608    # 8MB
MINIO_MULTIPART_CHUNKSIZE=8388608    # 8MB
MINIO_MAX_CONCURRENCY=10
MINIO_DOWNLOAD_ATTEMPTS=3

# URL Settings
MINIO_PRESIGNED_URL_EXPIRY=3600      # 1 hour
MINIO_PUBLIC_URL_BASE=

# ========================================
# CACHE MANAGER CONFIGURATION
# ========================================
# Layer Configuration
ENABLE_MEMORY_CACHE=true
MEMORY_CACHE_MAX_SIZE=1000
ENABLE_REDIS_CACHE=true
ENABLE_DISTRIBUTED_CACHE=false

# Cache Behavior
CACHE_WARMUP=false
CACHE_PRELOAD=false
CACHE_COMPRESSION=true

# Monitoring
CACHE_ENABLE_METRICS=true
CACHE_METRICS_INTERVAL=60

# ========================================
# SECURITY CONFIGURATION
# ========================================
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================
MAX_WORKERS=10
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=prolaunch
POSTGRES_PASSWORD=prolaunch123
POSTGRES_DB=prolaunch

# ========================================
# MCP SERVER TOKENS
# ========================================
# Apify MCP
APIFY_TOKEN=

# Stripe MCP
STRIPE_SECRET_KEY=

# Supabase MCP
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Vercel MCP
VERCEL_TOKEN=

# GitHub MCP
GITHUB_TOKEN=

# Sentry MCP
SENTRY_DSN=

# Figma MCP
FIGMA_TOKEN=

# ========================================
# AI SERVICE CONFIGURATION
# ========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ========================================
# MONITORING & LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# DOCKER SPECIFIC (if using Docker)
# ========================================
# Override these when running in Docker
# REDIS_HOST=redis
# MINIO_ENDPOINT=minio:9000
# POSTGRES_HOST=postgres