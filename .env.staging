# Application
NODE_ENV=staging
API_URL=https://api-staging.prolaunch.com
APP_URL=https://staging.prolaunch.com

# Database
POSTGRES_USER=${STAGING_DB_USER}
POSTGRES_PASSWORD=${STAGING_DB_PASSWORD}
POSTGRES_DB=prolaunch_staging
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# MinIO
MINIO_ROOT_USER=${STAGING_MINIO_USER}
MINIO_ROOT_PASSWORD=${STAGING_MINIO_PASSWORD}
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_USE_SSL=true

# Authentication
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}

# Email
SMTP_HOST=${STAGING_SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${STAGING_SMTP_USER}
SMTP_PASSWORD=${STAGING_SMTP_PASSWORD}
EMAIL_FROM=noreply@staging.prolaunch.com